{
  "plugins": ["@typescript-eslint", "react", "prettier"],
  "extends": ["next", "plugin:@typescript-eslint/recommended", "plugin:react/recommended", "prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "semi": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": true
      }
    ],
    "react/react-in-jsx-scope": "off"
  }
}
